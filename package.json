{
    "name": "amazigh-ui",
    "version": "0.0.1",
    "private": true,
    "workspaces": [
      "apps/*",
      "packages/*",
      "tools/*"
    ],
    "scripts": {
      "build": "turbo run build",
      "dev": "turbo run dev",
      "lint": "turbo run lint",
      "test": "turbo run test",
      "clean": "turbo run clean && rm -rf node_modules",
      "format": "prettier --write \"**/*.{ts,tsx,md}\"",
      "changeset": "changeset",
      "version-packages": "changeset version",
      "release": "turbo run build && changeset publish"
    },
    "devDependencies": {
      "@changesets/cli": "^2.26.0",
      "eslint": "^8.40.0",
      "prettier": "^2.8.8",
      "turbo": "^1.9.3",
      "typescript": "^5.0.4"
    },
    "engines": {
      "node": ">=18.0.0"
    }
  }
